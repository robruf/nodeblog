<% include ./partials/header %>

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <div class="form-group text-center">
            <form action="/posts/<%=post._id%>?_method=PUT" method="POST">
                <label for="title">Title:</label>
                <input type="text" class="form-group" name="title" value="<%= post.title %>">
                <textarea class="form-control" rows="10" name="content"><%= post.content %></textarea>
                <% if (post.private == "Y") { %>
                    <input type="checkbox" id="privatepost" name="privatepost" value="on" checked>
                <% } else { %> 
                    <input type="checkbox" id="privatepost" name="privatepost" value="on">
                <% } %> 
                <label for="privatepost">Make this post private</label>
                <button class="btn btn-dark"type="submit">Post!</button>
            </form>
        </div>
    </div>
</div>


<% include ./partials/footer %>